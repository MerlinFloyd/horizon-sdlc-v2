{
  "augment.advanced": {
    "mcpServers": [
      {
        "name": "context7",
        "command": "npx",
        "args": ["-y", "@upstash/context7-mcp"]
      },
      {
        "name": "sequential-thinking",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
      },
      {
        "name": "playwright",
        "command": "npx",
        "args": ["@playwright/mcp@latest"]
      },
      {
        "name": "@21st-dev/magic",
        "command": "npx",
        "args": ["-y", "@21st-dev/magic@latest"],
        "env": {
          "API_KEY": "${env:MAGIC_API_KEY}"
        }
      }
    ]
  }
}
