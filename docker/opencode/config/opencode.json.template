{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "openrouter/anthropic/claude-sonnet-4",
  "share": "disabled",
  "autoupdate": false,
  "permission": {
    "edit": "ask",
    "bash": {
      "terraform apply": "ask",
      "terraform destroy": "ask",
      "terraform import": "ask",
      "terraform state rm": "ask",
      "terraform state mv": "ask",
      "terraform taint": "ask",
      "terraform apply -replace": "ask",
      "terraform state replace-provider": "ask",
      "rm -rf": "ask",
      "rm -r": "ask",
      "chmod 777": "ask",
      "chmod -R": "ask",
      "chown -R": "ask",
      "curl http*": "ask",
      "wget http*": "ask",
      "sudo": "ask",
      "su": "ask",
      "apt install": "ask",
      "apt-get install": "ask",
      "pip install": "ask",
      "npm install -g": "ask",
      "yarn global add": "ask",
      "systemctl": "ask",
      "service": "ask",
      "kill -9": "ask",
      "killall": "ask",
      "mount": "ask",
      "umount": "ask",
      "fdisk": "ask",
      "mkfs": "ask",
      "dd": "ask",
      "ssh": "ask",
      "scp": "ask",
      "rsync": "ask",
      "terraform plan": "allow",
      "terraform show": "allow",
      "terraform state list": "allow",
      "terraform state show": "allow",
      "terraform output": "allow",
      "terraform validate": "allow",
      "terraform fmt": "allow",
      "terraform version": "allow",
      "terraform providers": "allow",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cat": "allow",
      "head": "allow",
      "tail": "allow",
      "grep": "allow",
      "find": "allow",
      "echo": "allow",
      "date": "allow",
      "*": "ask"
    }
  },
  "disabled_providers": [
    "anthropic",
    "azure",
    "deepseek",
    "github-copilot",
    "github-models",
    "groq",
    "huggingface",
    "mistral",
    "openai",
    "requesty",
    "upstage",
    "v0"
  ],
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp"],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true
    },
    "shadcn-ui": {
      "type": "local",
      "command": ["npx", "@jpisnice/shadcn-ui-mcp-server"],
      "enabled": true
    },
    "magic": {
      "type": "local",
      "command": ["npx", "@21st-dev/magic", "API_KEY={env:TWENTY_FIRST_API_KEY}" ],
      "enabled": true
    }
  },
  "mode": {
    "idea-definition": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/idea-definition.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": false,
        "bash": false,
        "grep": true,
        "glob": true
      }
    },
    "enterprise-architecture": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/enterprise-architecture.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": false,
        "bash": false,
        "grep": true,
        "glob": true
      }
    },
    "prd-generation": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/prd-generation.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": false,
        "grep": true,
        "glob": true
      }
    },
    "trd-creation": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/trd-creation.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    },
    "feature-breakdown": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/feature-breakdown.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    },
    "user-stories": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/user-stories.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    }
  },
  "provider": {
    "openrouter": {
      "models": {
        "anthropic/claude-sonnet-4": {},
        "google/gemini-2.5-pro": {}
      },
      "options": {
        "apiKey": "{env:OPENROUTER_API_KEY}",
        "baseURL": "https://openrouter.ai/api/v1",
        "headers": {
          "HTTP-Referer": "https://horizon-sdlc.com",
          "X-Title": "Horizon SDLC"
        }
      }
    }
  }
}
