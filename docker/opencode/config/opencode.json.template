{
  "$schema": "https://opencode.ai/config.json",
  "theme": "github",
  "model": "openrouter/anthropic/claude-sonnet-4",
  "share": "disabled",
  "autoupdate": false,
  "disabled_providers": [
    "anthropic",
    "azure",
    "deepseek",
    "github-copilot",
    "github-models",
    "groq",
    "huggingface",
    "mistral",
    "openai",
    "requesty",
    "upstage",
    "v0"
  ],
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "{env:GITHUB_TOKEN}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp"],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true
    },
    "shadcn-ui": {
      "type": "local",
      "command": ["npx", "@jpisnice/shadcn-ui-mcp-server"],
      "enabled": true
    },
    "magic": {
      "type": "local",
      "command": ["npx", "-y", "@smithery/cli@latest", "run", "@21st-dev/magic-mcp"],
      "env": {
        "TWENTY_FIRST_API_KEY": "{env:TWENTY_FIRST_API_KEY}"
      },
      "enabled": true
    }
  },
  "mode": {
    "idea-definition": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/idea-definition.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": false,
        "bash": false,
        "grep": true,
        "glob": true
      }
    },
    "enterprise-architecture": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/enterprise-architecture.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": false,
        "bash": false,
        "grep": true,
        "glob": true
      }
    },
    "prd-generation": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/prd-generation.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": false,
        "grep": true,
        "glob": true
      }
    },
    "trd-creation": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/trd-creation.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    },
    "feature-breakdown": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/feature-breakdown.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    },
    "user-stories": {
      "model": "anthropic/claude-sonnet-4",
      "prompt": "{file:/.ai/prompts/user-stories.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true
      }
    }
  },
  "provider": {
    "openrouter": {
      "models": {
        "anthropic/claude-sonnet-4": {},
        "google/gemini-2.5-pro": {}
      },
      "options": {
        "apiKey": "{env:OPENROUTER_API_KEY}",
        "baseURL": "https://openrouter.ai/api/v1",
        "headers": {
          "HTTP-Referer": "https://horizon-sdlc.com",
          "X-Title": "Horizon SDLC"
        }
      }
    }
  }
}
