    "crofai",
    "crusoe",
    "deepinfra",
    "deepseek",
    "enfer",
    "featherless",
    "fireworks",
    "friendli",
    "gmicloud",
    "google-ai-studio",
    "google-vertex",
    "groq",
    "hyperbolic",
    "inception",
    "inference-net",
    "infermatic",
    "inflection",
    "klusterai",
    "lambda",
    "liquid",
    "mancer",
    "meta",
    "minimax",
    "mistral",
    "moonshotai",
    "morph",
    "ncompass",
    "nebius",
    "nextbit",
    "nineteen",
    "novita",
