{
  "name": "Code Review & Inspection Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-containers",
        "bierner.markdown-mermaid",
        "zainchen.json",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "ms-python.python",
        "golang.go",
        "hashicorp.terraform",
        "github.vscode-github-actions",
        "github.codespaces",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": null,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "files.associations": {
          "*.json": "jsonc",
          "*.env*": "dotenv"
        },
        "docker.enableDockerComposeLanguageService": true,
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.formatting.provider": "black"
      }
    }
  },

  "containerEnv": {
    "NODE_ENV": "development",
    "DEBIAN_FRONTEND": "noninteractive"
  },

  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/bin:/home/vscode/.local/bin"
  },

  "mounts": [
    "source=devcontainer-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ],

  "runArgs": [
    "--init",
    "--privileged"
  ],

  "overrideCommand": false,
  "shutdownAction": "stopContainer",

  "postCreateCommand": ".devcontainer/setup.sh",
  "postStartCommand": "echo 'Development environment ready for code review! ðŸš€'",

  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Development Server",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Additional Services",
      "onAutoForward": "silent"
    }
  },

  "remoteUser": "node",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
